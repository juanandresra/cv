---
const { title, skills } = Astro.props;
---

<div class="flex flex-col gap-6">
	<h1 class="text-[#449399] font-bold text-md underline underline-offset-4 decoration-2">
		HABILIDADES
	</h1>
	<ul class="flex flex-row flex-wrap gap-2">
		{ skills.map((skill: string) => 
			<li class="text-white text-xs bg-gray-400 rounded px-2 py-1 whitespace-nowrap">{skill}</li>
		)}
	</ul>
</div>