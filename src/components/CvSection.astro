---
import { Icon } from "astro-icon/components";
const { title, items } = Astro.props;
---

<div class="flex flex-col gap-6">
	<h1
		class="text-[#449399] font-bold text-md underline underline-offset-4 decoration-2"
	>
		{title}
	</h1>
	<ul class="flex flex-col gap-4 text-sm">
		{
			items.map((item: any) => (
				<li>
					<div class="flex flex-col gap-1 leading-none">
						<span class="font-bold leading-none">
							{item.institution}
						</span>

						<div class="italic text-xs text-[#449399] flex justify-between leading-none">
							<span>{item.date}</span>
							<span>{item.location}</span>
						</div>
						<span class="leading-none mb-1">{item.title}</span>

						{item.contact && (
							<div class="leading-none mb-1 flex flex-row gap-1">
								<Icon class={"size-4"} name="mdi:phone" />
								<span>{item.contact}</span>
							</div>
						)}
					</div>
				</li>
			))
		}
	</ul>
</div>
